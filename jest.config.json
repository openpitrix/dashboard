{
  "setupFiles": [
    "./test/setup.js"
  ],
  "bail": true,
  "verbose": true,
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  }, 
  "moduleNameMapper": {
    "\\.(png|svg)$": "<rootDir>/config/assets.transform.js",
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "coverageDirectory": "./coverage/",
  "collectCoverageFrom": [
    "src/{components,containers}/**/*.{js,jsx}",
    "src/utils/*.js",
    "!**/node_modules/**"
  ],
  "testPathIgnorePatterns": [
    "/e2e/",
    "/node_modules/"
  ]
}
